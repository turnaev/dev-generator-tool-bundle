<?php

namespace {{ bundel_namespace_target }}\Form{{ entity_namespace ? '\\' ~ entity_namespace : '' }}\Type;

use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\OptionsResolver\OptionsResolverInterface;
{% set format = "%-" ~ maxColumnNameSize ~ "s" %}

class {{ form_class }} extends AbstractType
{
    /**
     * @param FormBuilderInterface $builder
     * @param array                $options
     */
    public function buildForm(FormBuilderInterface $builder, array $options)
    {
        $builder{{ "\n" }}{%- for field in fields %}
            ->add({{ format|format("'" ~field ~ "'") }}, null, ['label'=>{{ format|format("'" ~field ~ "'") }}, 'translation_domain' => 'entity_{{ entity_class }}']){{ "\n" }}
        {%- endfor %}
        ;
    }

    /**
     * @param OptionsResolverInterface $resolver
     */
    public function setDefaultOptions(OptionsResolverInterface $resolver)
    {
        $resolver->setDefaults([
            'data_class' => '{{ namespace }}\Entity{{ entity_namespace ? '\\' ~ entity_namespace : '' }}\{{ entity_class }}',
            'label'      => '{{ form_label }}',
        ]);
    }

    /**
     * @return string
     */
    public function getName()
    {
        return 'form_{{ name_entity }}';
    }
}