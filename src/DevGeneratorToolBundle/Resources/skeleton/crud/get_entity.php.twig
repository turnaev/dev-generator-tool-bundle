
    /**
     * @param $id
     *
     * @return {{ entity }}
     * @throws \Symfony\Component\HttpKernel\Exception\NotFoundHttpException
     */
    private function createContextMenu($id)
    {
        $entity = $this->getRepository('VNCoreBundle:{{ entity }}')->find($id);

        if (!$entity) {
            throw $this->createNotFoundException('Unable to find {{ entity }} entity.');
        }

        return $entity;
    }
