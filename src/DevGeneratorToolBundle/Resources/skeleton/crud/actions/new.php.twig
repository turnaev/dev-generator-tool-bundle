
    /**
     * Displays a form to create a new {{ entity }} entity.
     *
{% if 'annotation' == format %}
     * @Route("/new", name="{{ route_name_prefix }}.new")
     * @Method("GET")
     * @Template()
{% endif %}
     */
    public function newAction()
    {
        $entity = new {{ entity_class }}();
        $form   = $this->createForm(new {{ entity_class }}FormType(), $entity);

{% if 'annotation' == format %}
        return [
            'entity' => $entity,
            'form'   => $form->createView(),
        ];
{% else %}
        return $this->render('{{ namespace|replace({'\\': ''}) }}:{{ entity|replace({'\\': '/'}) }}:Crud/new.html.twig', [
            'entity' => $entity,
            'form'   => $form->createView(),
        ]);
{% endif %}
    }
