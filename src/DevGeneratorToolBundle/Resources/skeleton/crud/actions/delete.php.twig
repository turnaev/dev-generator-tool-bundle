
    /**
     * Deletes a {{ entity }} entity.
     *
     * @param HttpFoundation\Request $request
     * @param int $id
     *
     * @return HttpFoundation\RedirectResponse
     */
    public function deleteAction(HttpFoundation\Request $request, $id)
    {
        $this->deleteEntity($request, $id);

        $url = $this->generateUrl('{{ route_prefix }}.list');

        return $this->redirect($url);
    }
