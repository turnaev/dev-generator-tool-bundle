
    /**
     * Deletes a {{ entity }} entity.
     * @param HttpFoundation\Request $request
     * @param integer $id
     * @return HttpFoundation\RedirectResponse
{% if 'annotation' == format %}
     * @Route("/{id}", name="{{ route_name_prefix }}.delete")
     * @Method("DELETE")
{% endif %}
     */
    public function deleteAction(HttpFoundation\Request $request, $id)
    {
        $form = $this->createDeleteForm($id);
        $form->submit($request);

        if ($form->isValid()) {

            $entity = $this->getEntity($id);

            $em   = $this->getEntityManager();
            $em->remove($entity);
            $em->flush();
        }

        $url = $this->generateUrl('{{ route_prefix }}.list');
        return $this->redirect($url);
    }
