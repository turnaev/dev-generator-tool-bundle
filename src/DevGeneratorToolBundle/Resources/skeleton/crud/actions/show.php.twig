
    /**
     * Finds and displays a {{ entity }} entity.
     * @param integer $id
     * @return \Symfony\Component\HttpFoundation\Response
     //* @throws \Symfony\Component\HttpKernel\Exception\NotFoundHttpException
{% if 'annotation' == format %}
     * @Route("/{id}", name="{{ route_name_prefix }}.show")
     * @Method("GET")
     * @Template()
{% endif %}
     */
    public function showAction($id)
    {
        $entity = $this->getEntity($id);
        {#$entity = $this->getRepository('{{ bundle }}:{{ entity }}')->find($id);#}

        {#if (!$entity) {#}
            {#throw $this->createNotFoundException('Unable to find {{ entity }} entity.');#}
        {#}#}

        $this->initBreadcrumb()
             ->addItem('Show',
                       $this->generateUrl('{{ route_name_prefix }}.show', ['id' => $entity->getId()]))

{% if 'annotation' == format %}
        return [
            'entity'      => $entity,
{% if 'delete' in actions %}
            'delete_form' => $this->createDeleteForm($id)->createView(),
{% endif %}
        ];
{% else %}
        return $this->render(
            '{{ namespace|replace({'\\': ''}) }}:{{ entity|replace({'\\': '/'}) }}:Crud/show.html.twig', [
                'entity'       => $entity,
{% if 'delete' in actions %}
                'delete_form'  => $this->createDeleteForm($id)->createView(),
{% endif %}
                'context_menu' => $this->createContextMenu($entity)
        ]);
{% endif %}
    }
