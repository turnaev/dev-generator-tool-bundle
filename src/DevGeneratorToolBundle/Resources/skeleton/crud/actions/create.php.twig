
    /**
     * Creates a new {{ entity }} entity.
     * @param HttpFoundation\Request $request
     * @return HttpFoundation\Response
{% if 'annotation' == format %}
     * @Route("/", name="{{ route_prefix }}.create")
     * @Method("POST")
     * @Template("{{ bundle }}:{{ entity }}:new.html.twig")
{% endif %}
     */
    public function createAction(HttpFoundation\Request $request)
    {
        $entity  = new {{ entity_class }}();

        $form = $this->createForm(new {{ entity_class }}FormType(), $entity);
        $form->handleRequest($request);

        if ($form->isValid()) {

            $em = $this->getEntityManager();
            $em->persist($entity);
            $em->flush();

            {% if 'show' in actions -%}
                $url = $this->generateUrl('{{ route_prefix }}.show', ['id' => $entity->getId()]);
                return $this->redirect($url);
            {%- else %}
                $url = $this->generateUrl('{{ route_prefix }}');
                return $this->redirect();
            {%- endif %}

        }

        $url = $this->generateUrl('{{ route_prefix }}.create');
        $this->initBreadcrumb()->addItem('Create', $url);

{% if 'annotation' == format %}
        return [
            'entity' => $entity,
            'form'   => $form->createView(),
        ];
{% else %}
        return $this->render(
            '{{ namespace|replace({'\\': ''}) }}:{{ entity|replace({'\\': '/'}) }}:Crud/create.html.twig', [
                'entity'       => $entity,
                'form'         => $form->createView(),
                'context_menu' => $this->createContextMenu()
        ]);
{% endif %}
    }
