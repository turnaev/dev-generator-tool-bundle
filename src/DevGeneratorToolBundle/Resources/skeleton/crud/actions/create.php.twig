
    /**
     * Creates a new {{ entity }} entity.
     * @return \Symfony\Component\HttpFoundation\RedirectResponse|\Symfony\Component\HttpFoundation\Response
{% if 'annotation' == format %}
     * @Route("/", name="{{ route_prefix }}.create")
     * @Method("POST")
     * @Template("{{ bundle }}:{{ entity }}:new.html.twig")
{% endif %}
     */
    public function createAction()
    {
        $entity  = new {{ entity_class }}();

        $form = $this->createForm(new {{ entity_class }}FormType(), $entity);
        $form->handleRequest($this->getRequest());

        if ($form->isValid()) {

            $em = $this->getEntityManager();
            $em->persist($entity);
            $em->flush();

            {% if 'show' in actions -%}
                return $this->redirect($this->generateUrl('{{ route_name_prefix }}.show', ['id' => $entity->getId()]));
            {%- else -%}
                return $this->redirect($this->generateUrl('{{ route_name_prefix }}'));
            {%- endif %}

        }

        $this->initBreadcrumb()
             ->addItem('Create',
                       $this->generateUrl('{{ route_name_prefix }}.create'));

{% if 'annotation' == format %}
        return [
            'entity' => $entity,
            'form'   => $form->createView(),
        ];
{% else %}
        return $this->render(
            '{{ namespace|replace({'\\': ''}) }}:{{ entity|replace({'\\': '/'}) }}:Crud/create.html.twig', [
                'entity'       => $entity,
                'form'         => $form->createView(),
                'context_menu' => $this->createContextMenu()
        ]);
{% endif %}
    }
