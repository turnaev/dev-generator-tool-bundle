
    /**
     * @param null|Currency $entity
     * @return \Knp\Menu\ItemInterface
     */
    private function createContextMenu({{ entity }} $entity = null)
    {
        $menuBuilder = $this->get('menu.context.builder');

        $contextMenu = $menuBuilder->create('{{ name_entity }}', $entity);

        return $menuBuilder->init($contextMenu);
    }
