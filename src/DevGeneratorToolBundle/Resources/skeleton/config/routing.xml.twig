<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="{{ route_prefix }}.list" pattern="/list">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:list</default>
    </route>
    {% if 'new' in actions %}

    <route id="{{ route_prefix }}.create" pattern="/create">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:create</default>
    </route>
    {% endif %}

    <route id="{{ route_prefix }}.show" pattern="/{id}/show">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:show</default>
        <requirement key="id">\d+</requirement>
    </route>
{% if 'edit' in actions %}

    <route id="{{ route_prefix }}.edit" pattern="/{id}/edit">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:edit</default>
        <requirement key="id">\d+</requirement>
    </route>
{% endif %}
{% if 'delete' in actions %}

    <route id="{{ route_prefix }}.delete" pattern="/{id}/delete">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:delete</default>
        <requirement key="_method">post|delete</requirement>
        <requirement key="id">\d+</requirement>
    </route>
{% endif %}

</routes>
