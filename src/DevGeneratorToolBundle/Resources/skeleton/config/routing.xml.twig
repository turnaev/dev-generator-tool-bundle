<?xml version="1.0" encoding="UTF-8" ?>
<routes
        xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="{{ route_prefix }}" methods="GET" path="/">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:list</default>
    </route>

    <route id="{{ route_prefix }}.list" methods="GET" path="/list">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:list</default>
    </route>
{%if 'new' in actions %}

    <route id="{{ route_prefix }}.create" methods="POST" path="/create">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:create</default>
    </route>
{% endif %}

    <route id="{{ route_prefix }}.show" methods="GET" path="/{id}/show">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:show</default>
        <requirement key="id">\d+</requirement>
    </route>
{%if 'edit' in actions %}

    <route id="{{ route_prefix }}.edit" methods="POST" path="/{id}/edit">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:edit</default>
        <requirement key="id">\d+</requirement>
    </route>
{% endif %}
{% if 'delete' in actions %}

    <route id="{{ route_prefix }}.delete" methods="DELETE" path="/{id}/delete">
        <default key="_controller">{{ backend_bundle }}:{{ entity }}:delete</default>
        <requirement key="id">\d+</requirement>
    </route>
{% endif %}

</routes>
